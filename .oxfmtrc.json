{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "insertFinalNewline": true,
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "bun.lock",
    "CLAUDE.md",
    "CHANGELOG.md"
  ]
}
