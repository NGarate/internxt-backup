{
  "name": "internxt-backup",
  "version": "0.4.0",
  "description": "A simple, fast, and efficient tool for backing up files to Internxt Drive",
  "keywords": [
    "backup",
    "cli",
    "cloud-storage",
    "encryption",
    "file-sync",
    "file-transfer",
    "internxt",
    "upload"
  ],
  "license": "MIT",
  "author": "ngarate",
  "bin": {
    "internxt-backup": "./dist/bin/index.js"
  },
  "files": [
    "index.ts",
    "src/**/*.ts",
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start": "bun index.ts",
    "test": "bun test",
    "release": "semantic-release",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --check",
    "format:fix": "oxfmt",
    "typecheck": "tsc --noEmit",
    "build": "bun build --minify --target bun --sourcemap=linked ./index.ts --outdir ./dist/bin",
    "check": "bun run lint && bun run format && bun run typecheck && bun test",
    "fix": "bun run lint:fix && bun run format:fix",
    "prepare": "husky",
    "prepublishOnly": "bun test && bun run build",
    "release:trigger": "bash ./scripts/trigger-release.sh"
  },
  "dependencies": {
    "croner": "^10.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bun": "^1.3.9",
    "@types/jest": "^30.0.0",
    "bun-types": "^1.3.9",
    "husky": "^9.1.7",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.9"
  }
}
